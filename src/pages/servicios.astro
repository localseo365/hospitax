---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';

const services = [
  {
    title: 'Vaciado Residencial',
    description: 'Servicio integral de vaciado para pisos, casas y apartamentos. Incluye desmontaje de muebles, clasificación de objetos y gestión de residuos.',
    features: [
      'Evaluación gratuita in situ',
      'Desmontaje profesional de muebles',
      'Clasificación de objetos para reciclaje',
      'Limpieza básica incluida',
      'Gestión de residuos certificada',
      'Servicio rápido y eficiente'
    ],
    image: 'https://badea.s3.fr-par.scw.cloud/baix-llobregat/img/vaciado-de-pisos-y-locales-en-sant-joan-despi-08970-79.jpg'
  },
  {
    title: 'Vaciado Comercial',
    description: 'Soluciones especializadas para locales comerciales, oficinas y espacios industriales, adaptadas a las necesidades específicas de cada negocio.',
    features: [
      'Planificación logística detallada',
      'Horarios flexibles',
      'Desmontaje de mobiliario comercial',
      'Gestión de equipos y materiales',
      'Certificado de gestión de residuos',
      'Cumplimiento normativo'
    ],
    image: 'https://serveis-badea.s3.eu-west-1.wasabisys.com/baix-llobregat/img/vaciado-de-pisos-y-l-1.jpg'
  },
  {
    title: 'Gestión de Residuos',
    description: 'Servicio especializado en la clasificación y gestión responsable de residuos, garantizando el máximo reciclaje y cumplimiento ambiental.',
    features: [
      'Clasificación profesional de residuos',
      'Reciclaje prioritario',
      'Gestión de residuos especiales',
      'Documentación de trazabilidad',
      'Certificados ambientales',
      'Transporte especializado'
    ],
    image: 'https://canalcover.cat/wp-content/uploads/2023/04/vaciado-pisos-barcelona-canalcover-3.jpg'
  }
];
---

<Layout title="Servicios - HOSPITAX">
  <Header />
  <main class="pt-16">
    <div class="bg-white">
      <div class="max-w-7xl mx-auto py-16 px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
            Nuestros Servicios
          </h1>
          <p class="mt-4 max-w-2xl mx-auto text-xl text-gray-500">
            Soluciones profesionales de vaciado adaptadas a sus necesidades
          </p>
        </div>

        <div class="mt-16 space-y-16">
          {services.map((service, index) => (
            <div class={`flex flex-col lg:flex-row gap-8 ${index % 2 === 1 ? 'lg:flex-row-reverse' : ''}`}>
              <div class="lg:w-1/2">
                <img 
                  src={service.image} 
                  alt={service.title}
                  class="w-full h-full object-cover rounded-lg shadow-lg"
                />
              </div>
              <div class="lg:w-1/2">
                <h2 class="text-2xl font-bold text-gray-900">{service.title}</h2>
                <p class="mt-4 text-lg text-gray-500">{service.description}</p>
                <ul class="mt-8 space-y-3">
                  {service.features.map(feature => (
                    <li class="flex items-center">
                      <svg class="h-5 w-5 text-primary-500" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                      </svg>
                      <span class="ml-2 text-gray-600">{feature}</span>
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          ))}
        </div>

        <div class="mt-16 bg-primary-50 rounded-2xl p-8">
          <h2 class="text-2xl font-bold text-gray-900 text-center">¿Por qué elegirnos?</h2>
          <div class="mt-8 grid grid-cols-1 gap-8 md:grid-cols-3">
            <div class="text-center">
              <div class="mx-auto h-12 w-12 text-primary-600">
                <svg class="h-12 w-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                </svg>
              </div>
              <h3 class="mt-4 text-lg font-medium text-gray-900">Garantía de Calidad</h3>
              <p class="mt-2 text-base text-gray-500">Servicio profesional con resultados garantizados</p>
            </div>
            <div class="text-center">
              <div class="mx-auto h-12 w-12 text-primary-600">
                <svg class="h-12 w-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <h3 class="mt-4 text-lg font-medium text-gray-900">Rapidez</h3>
              <p class="mt-2 text-base text-gray-500">Cumplimos con los plazos acordados</p>
            </div>
            <div class="text-center">
              <div class="mx-auto h-12 w-12 text-primary-600">
                <svg class="h-12 w-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" />
                </svg>
              </div>
              <h3 class="mt-4 text-lg font-medium text-gray-900">Precios Competitivos</h3>
              <p class="mt-2 text-base text-gray-500">Presupuestos ajustados sin costes ocultos</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>